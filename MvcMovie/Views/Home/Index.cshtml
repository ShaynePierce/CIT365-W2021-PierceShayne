@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "LDS Movie Suggestor - Home Page";
}

<div class="text-center">
    <h1 class="display-4">LDS Movie Suggestor</h1>
    <h4>Your landing site for finding great LDS themed movies!</h4>
    <div class="row h-25">
        @{
            foreach (var item in Model.Movies)
            {
            <div class="container col-md-3 col-sm-6 p-1 h-100">
                <div class="d-block m-3 p-1 border-primary border shadow">
                    <picture class="poster-img">
                        <img src="@Url.Content(@item.ImageURL)" alt="Poster for @item.Title">
                    </picture>
                    <div class="d-block">
                        <h5 class="card-title mt-1">@item.Title</h5>
                        <p class="card-text">@item.Genre   -  @item.Rating</p>
                        <a href="Movies/Details/@item.Id" class="btn btn-primary mb-1">Movie Details</a>
                    </div>
                </div>
            </div>
            }
        }
    </div>
</div>
